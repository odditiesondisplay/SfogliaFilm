<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/backgroundSTD</item>
        <item name="android:colorBackground">@color/backgroundSTD</item>
        <item name="actionBarStyle">@style/TitleTextStyle</item>
        <item name="actionBarPopupTheme">@style/TitleTextStyle</item>
    </style>
    <style name="Listing" parent="AppTheme">
        <item name="background">@color/backgroundSTD</item>
        <item name="colorPrimary">@color/violetto</item>
        <item name="colorPrimaryDark">@color/violettoscuro</item>
    </style>
    <style name="ActionBar.Solid.SfogliaMovie"  parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="displayOptions">showHome|showTitle</item>
        <item name="logo">@drawable/ic_sm</item>
        <item name="background">@color/backgroundTitle</item>
    </style>
    <style name="TitleTextStyle" parent="ActionBar.Solid.SfogliaMovie">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/backgroundTitle</item>
    </style>
</resources>